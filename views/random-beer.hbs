<div class='container wrap-container'>
  {{#each beer}}
    <div class='card mb-3' style='max-width: 1140px;'>
      <div class='row g-0'>
        <div class='col-md-4'>
          <img
            src='{{this.image_url}}'
            class='img-fluid rounded-start'
            alt='{{this.name}}'
          />
        </div>
        <div class='col-md-8'>
          <div class='card-body'>
            <h5 class='card-title'>{{this.name}}</h5>
            <p class='card-tagline'>{{this.tagline}}</p>
            <p class='card-text'>{{this.description}}</p>
            <p class='card-title'>Food Pairing</p>
            <ul class='card-text'>
              {{#each this.food_pairing}}
                <li>{{this}}</li>
              {{/each}}
            </ul>
            <p class='card-text'><b>Brewers Tips:</b>{{this.brewers_tips}}</p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div> 